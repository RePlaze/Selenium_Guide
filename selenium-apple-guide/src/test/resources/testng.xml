<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Apple Selenium Test Suite" 
       verbose="2" 
       parallel="tests" 
       thread-count="2"
       data-provider-thread-count="3">
    
    <!-- Suite level listeners -->
    <listeners>
        <listener class-name="com.apple.automation.listeners.TestListener"/>
    </listeners>
    
    <!-- Suite level parameters -->
    <parameter name="headless" value="false"/>
    
    <!-- Smoke Tests - Critical functionality -->
    <test name="Smoke Tests - Chrome" preserve-order="false">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.apple.automation.tests.AppleE2ETest"/>
        </classes>
    </test>
    
    <!-- Cross Browser Tests -->
    <test name="Cross Browser - Firefox" enabled="true">
        <parameter name="browser" value="firefox"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.apple.automation.tests.AppleE2ETest">
                <methods>
                    <include name="testProductSearchFunctionality"/>
                    <include name="testNavigationMenuItems"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Regression Tests - All tests -->
    <test name="Regression Tests" enabled="false">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="regression"/>
                <exclude name="flaky"/>
            </run>
        </groups>
        <packages>
            <package name="com.apple.automation.tests.*"/>
        </packages>
    </test>
    
    <!-- Parallel Method Execution Example -->
    <test name="Parallel Methods Test" parallel="methods" thread-count="3" enabled="false">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="com.apple.automation.tests.AppleE2ETest"/>
        </classes>
    </test>
    
</suite>